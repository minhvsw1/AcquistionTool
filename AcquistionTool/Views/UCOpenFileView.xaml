<UserControl x:Class="AcquistionTool.Views.UCOpenFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcquistionTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="22.5" d:DesignWidth="800">
    <Grid>
        <UniformGrid Columns="20">
            <UniformGrid Columns="1">
                <Grid>
                    <Menu Background="Transparent">
                        <MenuItem Header="_File">
                            <MenuItem Header="_Open Folder" Command="{Binding OpenFolerCommand}"/>
                        </MenuItem>
                    </Menu>
                </Grid>
            </UniformGrid>
            <UniformGrid Columns="1">
                <Menu Background="Transparent">
                    <MenuItem Header="_View">
                        <MenuItem Header="_Toggle Favorite" Command="{Binding ToggeFavoriteCommand}"/>
                    </MenuItem>
                </Menu>
            </UniformGrid>
            <UniformGrid Columns="1">
                <Menu Background="Transparent">
                    <MenuItem Header="_Exit" Command="{Binding ExitCommand}">
                    </MenuItem>
                </Menu>
            </UniformGrid>
        </UniformGrid>
    </Grid>
</UserControl>
