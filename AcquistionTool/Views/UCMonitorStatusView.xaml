<UserControl x:Class="AcquistionTool.Views.UCMonitorStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcquistionTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="800">
    <Grid>
        <UniformGrid Columns="5">
            <UniformGrid Columns="1">
                <Label Content= "{Binding LbTotalImage}"></Label>
            </UniformGrid>
            <UniformGrid Columns="1">
                <Label Content="{Binding LbImageFavorite}"></Label>
            </UniformGrid>
            <UniformGrid Columns="1">
                <Label Content="{Binding LbCurrentStatus}"></Label>
            </UniformGrid>
        </UniformGrid>
    </Grid>
</UserControl>
