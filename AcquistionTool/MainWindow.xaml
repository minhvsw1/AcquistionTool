<Window x:Class="AcquistionTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcquistionTool" xmlns:local1="clr-namespace:AcquistionTool.Views"
        xmlns:view="clr-namespace:AcquistionTool.Views"
        xmlns:viewmodel="clr-namespace:AcquistionTool.ViewModels"
        mc:Ignorable="d"
        Title="Simple Image Viewer v1.0.1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ContentPresenter Content="{Binding OpenFile}">
                <ContentPresenter.Resources>
                    <DataTemplate DataType="{x:Type viewmodel:OpenFileViewModel}">
                        <view:UCOpenFileView/>
                    </DataTemplate>
                </ContentPresenter.Resources>
            </ContentPresenter>
        </Grid>

        <Grid Grid.Row="1">
            <UniformGrid Columns="2" Visibility="Hidden">
                <UniformGrid Columns="1">
                    <Grid>
                        <ListBox x:Name="ImageListBox"/>
                    </Grid>
                </UniformGrid>
                <UniformGrid Columns="1">
                    <Grid>
                        <Image x:Name="SelectedImage" Stretch="Uniform"/>
                    </Grid>
                </UniformGrid>
            </UniformGrid>
            <UniformGrid Columns="2">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl Grid.Row="0" ItemsSource="{Binding ImageSourceCollection}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5" CornerRadius="5">
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="{Binding IndexImageSource}" Stretch="Uniform"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                <Border Margin="1" 
                        BorderBrush="Gray" 
                        CornerRadius="3"
                        BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <ComboBox/>
                        <Image Source="{Binding CurrentImageSource}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Grid>

        <Grid Grid.Row="2">
            <ContentPresenter Content="{Binding MonitorStatus}">
                <ContentPresenter.Resources>
                    <DataTemplate DataType="{x:Type viewmodel:MonitorStatusViewModel}">
                        <view:UCMonitorStatusView/>
                    </DataTemplate>
                </ContentPresenter.Resources>
            </ContentPresenter>
        </Grid>
    </Grid>
</Window>
